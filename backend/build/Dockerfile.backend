FROM golang:1.16.4-alpine3.13 as builder

WORKDIR /go/src/github.com/htchan/BookSpider

COPY ./go.mod .
COPY ./go.sum .

RUN apk add gcc musl-dev libc-dev
RUN go mod download

COPY ./internal ./internal
COPY ./pkg ./pkg
COPY ./cmd/backend ./cmd/backend

RUN go build -v github.com/htchan/BookSpider/cmd/backend


FROM golang:1.16.3-alpine3.13

WORKDIR /usr/src/app

COPY --from=builder /go/src/github.com/htchan/BookSpider/backend .

COPY ./configs ./configs

CMD ['./backend']
