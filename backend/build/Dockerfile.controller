FROM golang:1.16.4-alpine3.13 as builder

WORKDIR /go/src/github.com/htchan/BookSpider

COPY . .
#RUN sed -i 's/.\/src\//.\//g' ./go.mod

RUN apk add gcc musl-dev libc-dev
RUN go mod download

RUN go build -v github.com/htchan/BookSpider/cmd/controller


FROM golang:1.16.3-alpine3.13

WORKDIR /usr/src/app

COPY --from=builder /go/src/github.com/htchan/BookSpider/controller .

COPY --from=builder /go/src/github.com/htchan/BookSpider/configs ./configs

CMD ['./controller']
