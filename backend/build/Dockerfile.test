FROM golang:1.17.6-alpine3.14 as builder

WORKDIR /go/src/github.com/htchan/BookSpider

RUN apk add gcc musl-dev libc-dev

COPY ./go.mod .
COPY ./go.sum .
RUN go mod download

COPY ./internal ./internal
COPY ./pkg ./pkg
COPY ./cmd ./cmd
COPY ./assets/schema /schema
COPY ./assets/test-data /test-data